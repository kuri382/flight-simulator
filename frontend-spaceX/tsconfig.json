{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }